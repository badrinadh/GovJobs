<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.india.jobs.govjobs.CompanyProfile">
    <LinearLayout
        android:id="@+id/layout1"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:padding="6dp"
            android:background="#BDBDBD"
            android:orientation="vertical"
            android:layout_gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <de.hdodenhof.circleimageview.CircleImageView
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/company_image"
                android:layout_width="96dp"
                android:layout_height="96dp"
                android:layout_gravity="center"
                app:civ_border_width="4dp"
                app:civ_border_color="#FFFFFF"/>
            <com.daniribalbert.customfontlib.views.CustomFontTextView
                android:layout_marginTop="3dp"
                app:font="ProzaLibre-Medium"
                android:layout_gravity="center"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:textColor="#FFFFFF"
                android:id="@+id/companyNameTv"
                android:textSize="20sp"/>
        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <com.daniribalbert.customfontlib.views.CustomFontTextView
                app:font="ProzaLibre-Regular"
                android:paddingLeft="8dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:text="@string/get_updates"
                android:textSize="16sp"/>
            <Button
                android:layout_marginRight="10dp"
                android:paddingLeft="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/fallow"
                android:text="@string/follow"/>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_below="@+id/layout1"
        android:layout_above="@+id/adView"
        android:paddingRight="2dp"
        android:paddingLeft="2dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ListView
            android:divider="@android:color/transparent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="10dp"
            android:transcriptMode="normal"
            android:clipToPadding="false"
            android:id="@+id/jobsLv">
        </ListView>
    </LinearLayout>
    <include layout="@layout/admob1"></include>
</RelativeLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="2dp"
    android:paddingRight="2dp"
    android:paddingTop="4dp">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FFFFFF"
        >
        <LinearLayout
            android:padding="8dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <com.daniribalbert.customfontlib.views.CustomFontTextView
                app:font="ProzaLibre-Medium"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/jobTitleTv"
                android:textSize="16sp"
                android:textColor="#000000"
                android:text="Job Title"
                />
        </LinearLayout>
        <LinearLayout
            android:padding="8dp"
            android:background="@drawable/border_bottom"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    android:id="@+id/companyLogoIv"/>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <com.daniribalbert.customfontlib.views.CustomFontTextView
                        app:font="ProzaLibre-Regular"
                        android:paddingLeft="6dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/descriptionTv"
                        android:text="description"
                        />
                    <com.daniribalbert.customfontlib.views.CustomFontTextView
                        app:font="ProzaLibre-Regular"
                        android:paddingLeft="6dp"
                        android:paddingTop="3dp"
                        android:textSize="12sp"
                        android:textColor="#000000"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/postDate"
                        android:text="Post Date"
                        />
                </LinearLayout>

            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:background="@drawable/border"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content">
                <com.daniribalbert.customfontlib.views.CustomFontTextView
                    app:font="ProzaLibre-Regular"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="#Company"
                    android:textColor="#000000"
                    android:padding="15dp"
                    android:id="@+id/companyName"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="horizontal">
                <net.steamcrafted.materialiconlib.MaterialIconView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    app:materialIcon="share_variant"
                    app:materialIconColor="#BDBDBD"
                    android:background="@drawable/border_lright"
                    android:scaleType="fitCenter"
                    android:padding="15dp"
                    app:materialIconSize="20sp"
                    android:id="@+id/sharePost"
                    android:layout_gravity="center" />
                <net.steamcrafted.materialiconlib.MaterialIconView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    app:materialIcon="bookmark"
                    android:padding="15dp"
                    app:materialIconSize="25sp"
                    app:materialIconColor="#BDBDBD"
                    android:background="@drawable/border_lright"
                    android:scaleType="fitCenter"
                    android:id="@+id/bookmarkPost"
                    android:layout_gravity="center" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>